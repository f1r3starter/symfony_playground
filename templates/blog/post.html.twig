{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
        <p><{{ id }}</p>
        <h1>{{ post.title|upper }}</h1>
        <p>{{ post.text }}</p>
        <p>{{ post.date|date('H:i:s') }}</p>
        <p>{{ 560|price }}</p>
        <p>Current locale {{ locale }}</p>
{% endblock %}